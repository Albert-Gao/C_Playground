#include <stdio.h>


void insertion_sort(int *arr, int size) {
    int start, compare, temp;

    for (start = 1; start < size; start++) {
        temp = arr[start];
        compare = start - 1;

        while (compare >= 0 && arr[compare] > temp) {
            arr[compare + 1] = arr[compare];
            compare = compare - 1;
        }

        arr[compare + 1] = temp;
    }
}
